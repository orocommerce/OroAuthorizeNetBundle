{% block oro_authorize_net_credit_card_expiration_date_widget -%}
    {% set validation = {
        'credit-card-expiration-date-not-blank': {'message': 'oro.payment.validation.expiration_date', 'payload': null},
        'credit-card-expiration-date': {'message': 'oro.payment.validation.month', 'payload': null}
    }
    %}

    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-month">
            {{ form_widget(form.month, {'attr': {'data-expiration-date-month': true}}) }}
        </div>
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-year">
            {{ form_widget(form.year, {'attr': {'data-expiration-date-year': true}}) }}
        </div>
    </div>
{%- endblock %}

{% block oro_authorize_net_settings_widget %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.authorize_net.settings.form.groups.display_options.title'|trans }}</span>
        </h5>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ UI.tooltip('oro.authorize_net.settings.label.tooltip', {}, 'right') }}
                {{ form_label(form.creditCardLabels) }}
            </div>
            <div class="controls">
                {{ form_widget(form.creditCardLabels) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ UI.tooltip('oro.authorize_net.settings.short_label.tooltip', {}, 'right') }}
                {{ form_label(form.creditCardShortLabels) }}
            </div>
            <div class="controls">
                {{ form_widget(form.creditCardShortLabels) }}
            </div>
        </div>
        {{ form_row(form.allowedCreditCardTypes) }}
    </fieldset>
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.authorize_net.settings.form.groups.integration.title'|trans }}</span>
        </h5>
        {{ form_row(form.apiLoginId) }}
        {{ form_row(form.transactionKey) }}
        {{ form_row(form.clientKey) }}
        {{ form_row(form.authNetRequireCVVEntry) }}
        {{ form_row(form.authNetTestMode) }}
    </fieldset>
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.authorize_net.settings.form.groups.advanced_settings.title'|trans }}</span>
        </h5>
        {{ form_row(form.creditCardPaymentAction) }}
    </fieldset>
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.authorize_net.settings.form.groups.other.title'|trans }}</span>
        </h5>
        {{ form_rest(form) }}
    </fieldset>
{% endblock %}
